    <!-- footer -->
    <footer class="bg-white shadow-sm border-t border-gray-100">
        <div class="max-w-6xl mx-auto px-4 py-3 flex justify-center items-center">
            <p class="text-gray-600 text-sm">&copy; CMPS 3390 - Project 3</p>
        </div>
